package freestyle.helpers.json;

import org.json.JSONException;
import org.json.JSONStringer;
import freestyle.data.dto.*;

public  class JsonCreator {
	public final String argName = "arg";
	
	public String create(NewRhyme obj) throws JSONException{
		JSONStringer jsObj = new JSONStringer() 
		.object() 
		.key(argName) 
		    .object() 
		        .key("UserKey").value(obj.userKey) 
		        .key("Title").value(obj.title) 
		        .key("Text").value(obj.text) 
		    .endObject() 
		.endObject();
		return jsObj.toString();
	}
	
	public String create(ReplyToSave obj) throws JSONException{
		JSONStringer jsObj = new JSONStringer()
		.object()
		.key(argName)
			.object()
				.key("Text").value(obj.text)
				.key("UserKey").value(obj.userKey)
				.key("RhymeId").value(obj.rhymeId)
			.endObject()
		.endObject();
		return jsObj.toString();
	}
	
	public String create(ReqRhyme obj) throws JSONException{
		JSONStringer jsObj = new JSONStringer()
		.object()
		.key(argName)
			.object()
				.key("UserKey").value(obj.userKey)
				.key("RhymeId").value(obj.rhymeId)
				.key("CurValue").value(obj.curValue)
				.key("IsNext").value(obj.isNext)
			.endObject()
		.endObject();
		return jsObj.toString();
	}
	
	public String create(RhymeToSave obj) throws JSONException{
		JSONStringer jsObj = new JSONStringer()
		.object()
		.key(argName)
			.object()
				.key("UserKey").value(obj.userKey)
				.key("RhymeId").value(obj.rhymeId)
				.key("ReplyId").value(obj.replyId)
			.endObject()
		.endObject();
		return jsObj.toString();
	}
	
	public String create(RhymeWithSenToSave obj) throws JSONException{
		JSONStringer jsObj = new JSONStringer()
		.object()
		.key(argName)
			.object()
				.key("UserKey").value(obj.userKey)
				.key("RhymeId").value(obj.rhymeId)
				.key("ReplyId").value(obj.replyId)
				.key("Sentence").value(obj.sentence)
			.endObject()
		.endObject();
		return jsObj.toString();
	}
}
