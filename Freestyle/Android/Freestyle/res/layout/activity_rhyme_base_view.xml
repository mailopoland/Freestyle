<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" >
   
	
   <RelativeLayout 
        android:id="@+id/main_layout"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
	    <RelativeLayout 
	        android:id="@+id/main_nested_layout"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content" 
	    	android:layout_marginBottom="4dp">
			<TextView
			    android:id="@+id/title_view"
			    style="@style/Title_BaseStyle"
			    android:layout_marginTop="@dimen/activity_vertical_margin"
			    />
		
			<TextView
			    android:id="@+id/author_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@+id/title_view"
			    android:layout_alignLeft="@+id/title_view"
			    android:layout_marginTop="3dp"
			    android:textColor="@color/gray_little_white"
			    android:textSize="15sp" 
			    android:textStyle="bold"
			 />
		
			<TextView
			    android:id="@+id/author_email"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/author_name"
			    android:layout_alignLeft="@+id/title_view"
			    android:layout_toLeftOf="@+id/additional_info_container"
			    android:textColor="@color/gray_little_white"
			    android:textSize="12sp"
			 />
			
			<LinearLayout
			    android:id="@+id/additional_info_container"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" 
			    android:orientation="vertical"
			    android:layout_alignParentRight="true"
			    android:layout_marginTop="@dimen/activity_vertical_margin"
			    android:layout_marginRight="@dimen/activity_horizontal_margin">
			    
		    </LinearLayout>
	    </RelativeLayout>
		<LinearLayout
		    android:id="@+id/sentences_rhymes_container"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:paddingTop="9dp"
		    android:layout_below="@id/main_nested_layout"
		    android:orientation="vertical">   
	    </LinearLayout>
    </RelativeLayout>
</ScrollView>
