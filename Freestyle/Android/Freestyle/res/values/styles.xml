<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
	
    
    <!-- FOR LAND DECOMPOSE FOR BASE OF BASE AND IN NO-LAND INCLUDE BASE OF BASE STYLE -->
    <!-- Rhyme title style (for edit and display) -->
    <style name="Title_BaseStyle">
        <item name="android:layout_width">190dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">19sp</item>
		<item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <style name="Sentence_Accept_Button">
	    <item name="android:layout_width">20dp</item>
	    <item name="android:layout_height">20dp</item> 
	    <item name="android:layout_centerHorizontal">true</item>
	    <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="Sentence_Button_Fragment">
        <item name="android:layout_width">0dp</item>
	    <item name="android:layout_weight">.19</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:layout_gravity">center|bottom</item>
    </style>
    
    <style name="Sentence_Edit_Text">
        <item name="android:layout_width">0dp</item>
	   	<item name="android:layout_weight">.81</item>
    	<item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:maxLength">@integer/rhyme_msg_max_length</item>
       	<item name="android:textSize">15sp</item>
    </style>
    
    
     <style name="Sentence_Layout">
	        <item name="android:background">@color/gray_dark</item>
	        <item name="android:baselineAligned">false</item>
	        <item name="android:paddingTop">9dp</item>
	        <item name="android:paddingBottom">9dp</item>
	    </style>
     
    <!--  Rhyme respond -->
	    <!--  Rhyme respond layout -->
	    <style name="Reply_Layout">
	        <item name="android:background">@color/red_dark</item>
	        <item name="android:baselineAligned">false</item>
	        <item name="android:paddingTop">7dp</item>
	        <item name="android:paddingBottom">7dp</item>
	    </style>
	    <!--  Rhyme respond view -->
	    <style name = "Reply_View">
	        <item name="android:layout_width">match_parent</item>
	        <item name="android:layout_height">wrap_content</item>
	        <item name="android:textColor">@color/red_light</item>
	        <item name="android:gravity">right</item>
	        <item name="android:textSize">14sp</item>
	        <item name="android:padding">5dp</item>
	        <item name="android:layout_marginTop">5dp</item>
	        <item name="android:layout_marginBottom">5dp</item>
	        <item name="android:layout_marginRight">5dp</item>
	        <item name="android:layout_marginLeft">25dp</item>
	    </style>
	    <!-- Rhyme Text -->
	    <style name="Rhyme_Text">
	        <item name="android:layout_height">wrap_content</item>
	        <item name="android:textColor">@color/red_light</item>
	        <item name="android:textSize">15sp</item>
	    </style>
	    
	<!-- Settings -->
	<style name="Widget.TextView.ListSeparator" parent="@android:style/Widget.TextView">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:gravity">center_vertical</item>
	</style>
	<style name="PreferenceListHeader" parent="Widget.TextView.ListSeparator">
	    <item name="android:textColor">@color/white</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:paddingTop">12dp</item>
	    <item name="android:paddingLeft">12dp</item>
	</style>
	<style name="Settings.Custom" parent="AppBaseTheme">
    	<item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>               
	</style>
</resources>
